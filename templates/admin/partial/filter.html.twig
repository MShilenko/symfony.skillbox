<form>
    <div class="input-group mb-3">
        <input type="text"
               name="q"
               class="form-control"
               placeholder="Найти..."
               value="{{ query.get('q') }}"
        >
        <div class="input-group-append">
            <button type="submit" class="btn btn-outline-secondary"><i class="fa fa-search"></i></button>
        </div>
    </div>
    {% if app.request.get('_route') != 'app_admin_articles' %}
        <div class="input-group mb-3">
            <div class="form-check">
                <input type="checkbox"
                name="showDeleted"
                class="form-check-input"
                {% if (query.has('showDeleted')) %} checked {% endif %}
                >
                <label class="form-check-label">Показать удаленные</label>
            </div>   
        </div>
    {% endif %}
    <div class="input-group mb-3">
        <select class="form-select mr-1" name="onPage">
            <option value="10"{% if (query.get('onPage') == 10) %} selected{% endif %}>10</option>
            <option value="20"{% if (query.get('onPage') == 20) %} selected{% endif %}>20</option>
            <option value="50"{% if (query.get('onPage') == 50) %} selected{% endif %}>50</option>
        </select>  
        <label class="form-check-label">Показать на странице</label>
    </div>
</form>